{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "jsx": "react",
    "noImplicitAny": true,
    "lib": ["es2015"],
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", ".cache"]
}
